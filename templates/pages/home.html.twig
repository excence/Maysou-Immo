{% extends 'base.html.twig' %}

{% block title 'Agence Maysou_Immobilier' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Agence Maysou-Immobilier</h1>
        Lorem ipsum dolor sit amet, consecture adiscping elit.
    </div>

    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <H5 class="card-title">
